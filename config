#!/usr/bin/env bash
_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export OBJECTSTORE_IMAGE=${OBJECTSTORE_IMAGE:="$(awk -F '[ :]' '{print $2}' "${_DIR}/Dockerfile")"}
export OBJECTSTORE_IMAGE_IMAGE_VERSION=${OBJECTSTORE_IMAGE_VERSION:="$(awk -F '[ :]' '{print $3}' "${_DIR}/Dockerfile")"}
export OBJECTSTORE_ROOT=${OBJECTSTORE_ROOT:="$DOKKU_LIB_ROOT/services/objectstore"}
export OBJECTSTORE_HOST_ROOT=${OBJECTSTORE_HOST_ROOT:=$OBJECTSTORE_ROOT}

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=()
export PLUGIN_COMMAND_PREFIX="objectstore"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$OBJECTSTORE_ROOT
export PLUGIN_DATA_HOST_ROOT=$OBJECTSTORE_HOST_ROOT
export PLUGIN_DATASTORE_PORTS=(9000 9090)
export PLUGIN_DATASTORE_WAIT_PORT=9000
export PLUGIN_DEFAULT_ALIAS="S3"
export PLUGIN_DISABLE_PULL=${OBJECTSTORE_DISABLE_PULL:=}
export PLUGIN_DISABLE_PULL_VARIABLE="OBJECTSTORE_DISABLE_PULL"
export PLUGIN_ALT_ALIAS="DOKKU_MINIO"
export PLUGIN_IMAGE=$OBJECTSTORE_IMAGE
export PLUGIN_IMAGE_VERSION=$OBJECTSTORE_IMAGE_IMAGE_VERSION
export PLUGIN_SCHEME="http"
export PLUGIN_SERVICE="Objectstore"
export PLUGIN_VARIABLE="OBJECTSTORE"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
export PLUGIN_CONFIG_SUFFIX="data"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

export PLUGIN_BUSYBOX_IMAGE="busybox:1.31.1-uclibc"
export PLUGIN_AMBASSADOR_IMAGE="dokku/ambassador:0.3.3"
export PLUGIN_S3BACKUP_IMAGE="dokku/s3backup:0.10.3"
export PLUGIN_WAIT_IMAGE="dokku/wait:0.4.3"
export PLUGIN_MINIO_CLIENT_IMAGE="minio/mc:RELEASE.2022-08-05T08-01-28Z"

export OBJECTSTORE_CONFIG_OPTIONS=${OBJECTSTORE_CONFIG_OPTIONS:=""}